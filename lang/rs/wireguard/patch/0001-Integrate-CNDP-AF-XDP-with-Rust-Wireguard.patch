+        // Compare contents of parsed payload with original payload.
+        udp_payload_parsed.truncate(payload_len as usize);
+        let match_buf_count = udp_payload
+            .iter()
+            .zip(udp_payload_parsed.iter())
+            .filter(|&(a, b)| a == b)
+            .count();
+        let res =
