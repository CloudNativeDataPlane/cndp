+fn handle_icmp_packet<'a>(
+    source: IpAddr,
+    destination: IpAddr,
+    packet: &'a [u8],
+) -> Option<IcmpPacketType<'a>> {
+    let icmp_packet = IcmpPacket::new(packet);
+    if let Some(icmp_packet) = icmp_packet {
+        match icmp_packet.get_icmp_type() {
+            IcmpTypes::EchoReply => {
