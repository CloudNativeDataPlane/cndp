+    // start Tun event thread
+    {
+        let cfg = cfg.clone();
+        let mut status = status;
+        thread::spawn(move || loop {
+            match status.event() {
+                Err(e) => {
+                    log::info!("Tun device error {}", e);
+                    profiler_stop();
+                    exit(0);
+                }
